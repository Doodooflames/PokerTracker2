<UserControl x:Class="PokerTracker2.Controls.BuyInLineGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="Auto">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="YAxisColumn" Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Y-axis scale indicators -->
        <Canvas x:Name="ScaleCanvas" 
                Grid.Column="0"
                Width="{DynamicResource ScaledGraphYAxisWidth}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Stretch"
                Margin="0,5,0,5">
            
            <!-- Scale lines and labels -->
            <Line x:Name="ScaleLine0" 
                  Stroke="#666666" StrokeThickness="1" 
                  Canvas.Top="0"/>
            <TextBlock x:Name="ScaleLabel0" 
                        Text="$0" 
                        Foreground="#CCCCCC" 
                        FontSize="{DynamicResource ScaledGraphAxisLabelFontSize}" 
                        Canvas.Left="0" 
                        Canvas.Top="-8"/>
            
            <Line x:Name="ScaleLine25" 
                  Stroke="#666666" StrokeThickness="1" 
                  Canvas.Top="0"/>
            <TextBlock x:Name="ScaleLabel25" 
                        Text="$0" 
                        Foreground="#CCCCCC" 
                        FontSize="{DynamicResource ScaledGraphAxisLabelFontSize}" 
                        Canvas.Left="0" 
                        Canvas.Top="-8"/>
            
            <Line x:Name="ScaleLine50" 
                  Stroke="#666666" StrokeThickness="1" 
                  Canvas.Top="0"/>
            <TextBlock x:Name="ScaleLabel50" 
                        Text="$0" 
                        Foreground="#CCCCCC" 
                        FontSize="{DynamicResource ScaledGraphAxisLabelFontSize}" 
                        Canvas.Left="0" 
                        Canvas.Top="-8"/>
            
            <Line x:Name="ScaleLine75" 
                  Stroke="#666666" StrokeThickness="1" 
                  Canvas.Top="0"/>
            <TextBlock x:Name="ScaleLabel75" 
                        Text="$0" 
                        Foreground="#CCCCCC" 
                        FontSize="{DynamicResource ScaledGraphAxisLabelFontSize}" 
                        Canvas.Left="0" 
                        Canvas.Top="-8"/>
            
            <Line x:Name="ScaleLine100" 
                  Stroke="#666666" StrokeThickness="1" 
                  Canvas.Top="0"/>
            <TextBlock x:Name="ScaleLabel100" 
                        Text="$0" 
                        Foreground="#CCCCCC" 
                        FontSize="{DynamicResource ScaledGraphAxisLabelFontSize}" 
                        Canvas.Left="0" 
                        Canvas.Top="-8"/>
        </Canvas>
        
                          <!-- Main graph area -->
         <Canvas x:Name="GraphCanvas" 
                 Background="Transparent" 
                 Margin="2,5,2,5" 
                 Grid.Column="1">
             
             <!-- Horizontal grid lines -->
             <Line x:Name="GridLine0" 
                   X1="0" Y1="0" X2="0" Y2="0" 
                   Stroke="#333333" StrokeThickness="1" 
                   Canvas.Top="0"/>
             <Line x:Name="GridLine25" 
                   X1="0" Y1="0" X2="0" Y2="0" 
                   Stroke="#333333" StrokeThickness="1" 
                   Canvas.Top="0"/>
             <Line x:Name="GridLine50" 
                   X1="0" Y1="0" X2="0" Y2="0" 
                   Stroke="#333333" StrokeThickness="1" 
                   Canvas.Top="0"/>
             <Line x:Name="GridLine75" 
                   X1="0" Y1="0" X2="0" Y2="0" 
                   Stroke="#333333" StrokeThickness="1" 
                   Canvas.Top="0"/>
             <Line x:Name="GridLine100" 
                   X1="0" Y1="0" X2="0" Y2="0" 
                   Stroke="#333333" StrokeThickness="1" 
                   Canvas.Top="0"/>
             
             <!-- Zero line (very subtle white line) -->
             <Line x:Name="ZeroLine" 
                   X1="0" Y1="0" X2="0" Y2="0" 
                   Stroke="White" StrokeThickness="0.8" 
                   Canvas.ZIndex="1"/>
             
             <!-- Colored line segments canvas -->
             <Canvas x:Name="LineSegmentsCanvas" Canvas.ZIndex="2"/>
             
             <!-- Data points -->
             <Canvas x:Name="DataPointsCanvas" Canvas.ZIndex="3"/>
        </Canvas>
    </Grid>
</UserControl>
