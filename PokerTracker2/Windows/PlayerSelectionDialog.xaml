<Window x:Class="PokerTracker2.Windows.PlayerSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:PokerTracker2.Windows"
        Title="Add Player to Session" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Border Background="#80000000" 
            CornerRadius="8" 
            BorderBrush="#40FFFFFF" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              Direction="270" 
                              ShadowDepth="8" 
                              Opacity="0.5" 
                              BlurRadius="16"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border x:Name="titleBar" Grid.Row="0" 
                    Background="#C0000000" 
                    BorderBrush="#60FFFFFF" 
                    BorderThickness="0,0,0,1" 
                    CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="ðŸ‘¤ Add Player to Session" 
                               FontSize="{DynamicResource ScaledDialogTitleFontSize}" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="20,15"/>
                    
                    <Button Grid.Column="1" Content="âœ•" Width="45" Height="32" 
                            Background="Transparent" BorderThickness="0" 
                            Foreground="White" Click="CloseButton_Click"
                            FontSize="{DynamicResource ScaledDialogPlayerNameFontSize}" FontWeight="Bold"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
        
                <!-- Search Box -->
                <Border Grid.Row="0" 
                        Background="#60000000" 
                        BorderBrush="#60FFFFFF" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="ðŸ”" 
                           FontSize="{DynamicResource ScaledDialogPlayerNameFontSize}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                
                <TextBox Grid.Column="1" 
                         x:Name="SearchTextBox" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         Foreground="White"
                         FontSize="{DynamicResource ScaledDialogSectionTitleFontSize}"
                         VerticalAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"/>
                
                <TextBlock Grid.Column="1" 
                           x:Name="SearchPlaceholder"
                           Text="Search existing players..." 
                           FontSize="{DynamicResource ScaledDialogSectionTitleFontSize}" 
                           Foreground="#AAAAAA"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
                
                <ui:Button Grid.Column="2" 
                           Content="âž• Create New Player" 
                           Appearance="Primary" 
                           FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}"
                           Padding="10,5"
                           Click="CreateNewPlayer_Click"/>
            </Grid>
        </Border>
        
                <!-- Players List -->
                <Border Grid.Row="1" 
                        Background="#60000000" 
                        BorderBrush="#60FFFFFF" 
                        BorderThickness="1" 
                        CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView x:Name="PlayersListView" 
                          Background="Transparent"
                          BorderThickness="0"
                          SelectionChanged="PlayersListView_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4040AA"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#30FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15,10" 
                                    BorderBrush="#30FFFFFF" 
                                    BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Player Info -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontSize="{DynamicResource ScaledDialogPlayerNameFontSize}" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="White"
                                                   Margin="0,0,0,5"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="ðŸ“Š Sessions: " FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}" Foreground="#CCCCCC"/>
                                            <TextBlock Text="{Binding TotalSessionsPlayed}" FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}" Foreground="White" FontWeight="Bold"/>
                                            
                                            <TextBlock Text="   ðŸ’° Lifetime P/L: " FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}" Foreground="#CCCCCC" Margin="15,0,0,0"/>
                                            <TextBlock Text="{Binding LifetimeProfit, StringFormat=C}" FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}" FontWeight="Bold" Foreground="White"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ•’ Last Played: " FontSize="{DynamicResource ScaledDialogSmallInfoFontSize}" Foreground="#AAAAAA"/>
                                            <TextBlock Text="{Binding LastPlayedDate, StringFormat='MM/dd/yyyy HH:mm'}" FontSize="{DynamicResource ScaledDialogSmallInfoFontSize}" Foreground="#AAAAAA"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Player Status -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <Border Background="#206040" 
                                                CornerRadius="3" 
                                                Padding="8,3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="âœ“ Active" FontSize="{DynamicResource ScaledDialogTinyInfoFontSize}" Foreground="LightGreen" FontWeight="Bold"/>
                                        </Border>
                                        
                                        <Border Background="#604020" 
                                                CornerRadius="3" 
                                                Padding="8,3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="âŠ˜ Inactive" FontSize="{DynamicResource ScaledDialogTinyInfoFontSize}" Foreground="Orange" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Border>
        
                <!-- Selected Player Preview -->
                <Border Grid.Row="2" 
                        Background="#60206040" 
                        BorderBrush="#60FFFFFF" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="0,20,0,0"
                        x:Name="SelectedPlayerPreview"
                        Visibility="Collapsed">
            <StackPanel Margin="15,10">
                <TextBlock Text="ðŸ“‹ Selected Player Details" FontSize="{DynamicResource ScaledDialogSectionTitleFontSize}" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="LightGreen"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="SelectedPlayerName" FontSize="{DynamicResource ScaledDialogPlayerNameFontSize}" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock x:Name="SelectedPlayerStats" FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}" Foreground="#CCCCCC"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock x:Name="SelectedPlayerContact" FontSize="{DynamicResource ScaledDialogSmallInfoFontSize}" Foreground="#AAAAAA" TextAlignment="Right"/>
                        <TextBlock x:Name="SelectedPlayerNotes" FontSize="{DynamicResource ScaledDialogSmallInfoFontSize}" Foreground="#AAAAAA" TextAlignment="Right" Margin="0,3,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
                <!-- Action Buttons -->
                <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Status Message -->
            <TextBlock Grid.Column="0" 
                       x:Name="StatusMessage" 
                       FontSize="{DynamicResource ScaledDialogPlayerInfoFontSize}" 
                       Foreground="Orange" 
                       VerticalAlignment="Center"/>
            
            <!-- Buttons -->
            <ui:Button Grid.Column="1" 
                       Content="Cancel" 
                       Appearance="Secondary" 
                       Margin="0,0,10,0" 
                       Padding="20,8"
                       Click="Cancel_Click"/>
            
            <ui:Button Grid.Column="2" 
                       x:Name="AddPlayerButton"
                       Content="Add Player" 
                       Appearance="Primary" 
                       Padding="20,8"
                       Click="AddPlayer_Click"
                       IsEnabled="False"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
