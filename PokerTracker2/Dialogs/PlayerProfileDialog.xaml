<Window x:Class="PokerTracker2.Dialogs.PlayerProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Player Profile"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="ui:Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        
        <!-- Aero PasswordBox Style - Matching Main App -->
        <Style x:Key="AeroPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#60000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="Left"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden"
                                          Focusable="False"
                                          CanContentScroll="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#E0000000" 
            CornerRadius="8" 
            BorderBrush="#40FFFFFF" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              Direction="270" 
                              ShadowDepth="8" 
                              Opacity="0.5" 
                              BlurRadius="16"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border x:Name="titleBar" Grid.Row="0" 
                    Background="#1A1A2E" 
                    BorderBrush="#0F3460" 
                    BorderThickness="0,0,0,1" 
                    CornerRadius="8,8,0,0"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="👤 Player Profile" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    
                    <ui:Button Grid.Column="1" 
                               Content="✕" 
                               Width="32" 
                               Height="32"
                               Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="20" 
                          Background="Transparent">
                <StackPanel>
                    
                    <!-- Basic Information -->
                    <Border Background="#A0000000" 
                            BorderBrush="#60FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Margin="0,0,0,15">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="📝 Basic Information" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10" 
                                       Foreground="White"/>
                            
                            <Grid Grid.Row="1" Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Name *" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,5"/>
                                <ui:TextBox Grid.Row="1" 
                                            x:Name="NameTextBox"
                                            PlaceholderText="Enter player name"
                                            Text="{Binding PlayerProfile.Name, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Nickname" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,5"/>
                                <ui:TextBox Grid.Row="1" 
                                            x:Name="NicknameTextBox"
                                            PlaceholderText="Enter nickname (optional)"
                                            Text="{Binding PlayerProfile.Nickname, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            
                            <Grid Grid.Row="3" Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Email" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,5"/>
                                <ui:TextBox Grid.Row="1" 
                                            x:Name="EmailTextBox"
                                            PlaceholderText="Enter email address"
                                            Text="{Binding PlayerProfile.Email, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Password Information -->
                    <Border Background="#A0000000" 
                            BorderBrush="#60FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Margin="0,0,0,15">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="🔐 Password (Optional)" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10" 
                                       Foreground="White"/>
                            
                            <Grid Grid.Row="1" Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Password" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,5"/>
                                <PasswordBox Grid.Row="1" 
                                            x:Name="PasswordBox"
                                            Style="{StaticResource AeroPasswordBoxStyle}"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Confirm Password" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,5"/>
                                <PasswordBox Grid.Row="1" 
                                            x:Name="ConfirmPasswordBox"
                                            Style="{StaticResource AeroPasswordBoxStyle}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Contact Information -->
                    <Border Background="#A0000000" 
                            BorderBrush="#60FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Margin="0,0,0,15">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="📞 Contact Information" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10" 
                                       Foreground="White"/>
                            
                            <Grid Grid.Row="1" Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Phone" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,5"/>
                                <ui:TextBox Grid.Row="1" 
                                            x:Name="PhoneTextBox"
                                            PlaceholderText="Enter phone number"
                                            Text="{Binding PlayerProfile.Phone, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Notes -->
                    <Border Background="#A0000000" 
                            BorderBrush="#60FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Margin="0,0,0,15">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="📝 Notes" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10" 
                                       Foreground="White"/>
                            
                            <ui:TextBox Grid.Row="1" 
                                        x:Name="NotesTextBox"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        Height="80"
                                        PlaceholderText="Add notes about this player..."
                                        Text="{Binding PlayerProfile.Notes, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </Border>

                    <!-- Status -->
                    <Border Background="#A0000000" 
                            BorderBrush="#60FFFFFF" 
                            BorderThickness="1" 
                            CornerRadius="8">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="⚙️ Status" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10" 
                                       Foreground="White"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <ui:ToggleSwitch Grid.Row="0" 
                                                 x:Name="ActiveToggleSwitch"
                                                 Content="Active Player"
                                                 IsChecked="{Binding PlayerProfile.IsActive}"/>
                                
                                <ui:ToggleSwitch Grid.Row="1" 
                                                 x:Name="AdminToggleSwitch"
                                                 Content="Administrator"
                                                 IsChecked="{Binding PlayerProfile.IsAdmin}"
                                                 Margin="0,10,0,0"
                                                 Visibility="{Binding DataContext.CanManageAdmin, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Button Bar -->
            <Border Grid.Row="2" 
                    Background="#1A1A2E" 
                    BorderBrush="#0F3460" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,8,8"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="* Required field" 
                               FontSize="12" 
                               Foreground="#CCCCCC" 
                               VerticalAlignment="Center"/>
                    
                    <ui:Button Grid.Column="1" 
                               x:Name="CancelButton"
                               Content="Cancel" 
                               Style="{StaticResource DialogButtonStyle}"
                               Click="CancelButton_Click"/>
                    
                    <ui:Button Grid.Column="2" 
                               x:Name="SaveButton"
                               Content="Save" 
                               Appearance="Primary"
                               Style="{StaticResource DialogButtonStyle}"
                               Click="SaveButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 